<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_light</item>
        <item name="android:textColorHint">@color/color_light</item>
        <item name="colorControlActivated">@color/colorRed</item>
    </style>

    <style name="ChatAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_light</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="NoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorRed</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/color_light</item>
        <item name="colorControlActivated">@color/colorRed</item>
        <item name="colorControlHighlight">@color/color_background</item>
    </style>

    <style name="ActionBarProfile" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_light</item>
        <item name="android:textColorHint">@color/color_light</item>
        <item name="colorControlActivated">@color/colorRed</item>
    </style>

    <style name="ActionBarSearch" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_background</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorRed</item>
    </style>







</resources>
