<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<android.support.v7.widget.CardView
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="50dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

                <RelativeLayout
                    android:id="@+id/Rl_Feedback"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                        <TextView
                            android:textAlignment="viewStart"
                            android:layout_below="@+id/TV_PatientName"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:id="@+id/TV_FeedbackText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today is Saturday and is Saturday and is Saturday and is Saturday and is Saturday and is Saturday and"
                            android:layout_marginStart="12dp"

                            />




                        <TextView
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:id="@+id/TV_Date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:inputType="textCapWords"
                            android:gravity="bottom|end"
                            android:textStyle="bold"
                            android:layout_below="@+id/TV_FeedbackText"
                            />



</RelativeLayout>


</android.support.v7.widget.CardView>








