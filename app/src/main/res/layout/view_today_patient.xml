<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout
    android:padding="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:weightSum="1"
    android:background="#fff"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/today_patient_name"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Today"
        android:textSize="20sp"
        android:inputType="textCapWords"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.pavlospt.roundedletterview.RoundedLetterView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/rlv_name_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            app:rlv_titleColor="#fff"
            app:rlv_backgroundColorValue="@color/color_light"
            app:rlv_titleSize="15dp"
            app:rlv_titleText="N"/>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >


            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:id="@+id/TV_PatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Omnia samir"
                android:layout_weight=".2"
                android:layout_gravity="center"
                android:inputType="textCapWords"

                />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>




