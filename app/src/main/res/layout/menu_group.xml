<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/cycle"
    android:id="@+id/layout">
    <LinearLayout

        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.github.pavlospt.roundedletterview.RoundedLetterView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:clickable="true"
            android:id="@+id/photoView"
            android:layout_width="35sp"
            android:layout_height="35sp"
            app:rlv_titleSize="16sp"
            app:rlv_backgroundColorValue="@color/colorPrimaryDark"
            app:rlv_titleColor="#fff"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:id="@+id/nameView"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Five"/>
    </LinearLayout>


</LinearLayout>