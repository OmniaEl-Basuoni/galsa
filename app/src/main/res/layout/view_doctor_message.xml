<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:padding="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:weightSum="1"
    android:background="#fff"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.pavlospt.roundedletterview.RoundedLetterView
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:id="@+id/rlv_name_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            app:rlv_titleColor="#fff"
            app:rlv_backgroundColorValue="@color/colorPrimaryDark"
            app:rlv_titleSize="15dp"
            app:rlv_titleText="N"
            />



        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="8"
            >

            <TextView
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:id="@+id/TV_Name"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Name "
                android:layout_below="@+id/IV"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:textAlignment="viewStart"
                android:textSize="14sp"
                android:inputType="textCapWords"
                android:layout_gravity="center"
                android:id="@+id/TV_MessageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Name "
                android:layout_below="@+id/IV"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".5"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/TV_MessageTime"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today"
                />



        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>